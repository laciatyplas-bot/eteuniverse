function renderWorlds() {
  elements.worldList.innerHTML = '';
  DATA.worlds.forEach(world => {
    const button = document.createElement('button');
    button.textContent = `\( {world.name} ( \){world.gates.length} bram)`;
    button.style.cssText = 'display:block;width:100%;padding:20px;margin:16px 0;border:none;border-radius:20px;background:linear-gradient(135deg,#0f2138,#071626);color:#E6F6F5;font-size:22px;font-weight:700;cursor:pointer;box-shadow:0 12px 40px rgba(0,0,0,0.6);transition:all 0.5s ease;';
    button.addEventListener('mouseover', () => button.style.transform = 'translateY(-8px) scale(1.03)');
    button.addEventListener('mouseout', () => button.style.transform = 'translateY(0) scale(1)');
    button.addEventListener('click', () => openWorld(world));
    elements.worldList.appendChild(button);
  });
}

function openWorld(world) {
  elements.contentArea.innerHTML = `
    <h2 style="color:#D9A441;margin:0 0 32px;font-size:36px;text-align:center;text-shadow:0 8px 32px rgba(217,164,65,0.4);">${escapeHtml(world.name)}</h2>
    \( {world.description ? `<p style="opacity:0.9;font-size:18px;line-height:1.8;margin-bottom:40px;text-align:center;max-width:900px;"> \){escapeHtml(world.description)}</p>` : ''}
  `;

  world.gates.forEach(gate => {
    const gateDiv = document.createElement('div');
    gateDiv.style.cssText = 'margin:48px 0;padding:32px;background:linear-gradient(145deg,#08121c,#0f2138);border-radius:24px;box-shadow:0 16px 60px rgba(0,0,0,0.8);border:1px solid rgba(40,211,198,0.2);';

    const h3 = document.createElement('h3');
    h3.textContent = escapeHtml(gate.name);
    h3.style.cssText = 'color:#28D3C6;margin:0 0 24px;font-size:28px;text-align:center;text-shadow:0 0 30px rgba(40,211,198,0.5);';
    gateDiv.appendChild(h3);

    if (gate.tag) {
      const tag = document.createElement('span');
      tag.textContent = gate.tag;
      tag.style.cssText = 'display:block;text-align:center;margin-bottom:28px;font-size:16px;padding:12px 32px;background:linear-gradient(135deg,rgba(217,164,65,0.2),rgba(40,211,198,0.2));color:#D9A441;border-radius:50px;letter-spacing:2px;font-weight:800;box-shadow:0 8px 24px rgba(217,164,65,0.3);';
      gateDiv.appendChild(tag);
    }

    if (gate.books && gate.books.length > 0) {
      gate.books.forEach(book => {
        const bookDiv = document.createElement('div');
        bookDiv.style.cssText = 'padding:24px;margin:20px 0;background:rgba(15,33,56,0.5);border-radius:20px;border:1px solid rgba(255,255,255,0.1);cursor:pointer;transition:all 0.5s ease;';
        bookDiv.addEventListener('mouseover', () => bookDiv.style.transform = 'translateX(16px) scale(1.03)');
        bookDiv.addEventListener('mouseout', () => bookDiv.style.transform = 'translateX(0) scale(1)');

        const title = document.createElement('strong');
        title.textContent = `ðŸ“˜ ${escapeHtml(book.title)}`;
        title.style.cssText = 'display:block;font-size:22px;color:#E6F6F5;margin-bottom:16px;';
        bookDiv.appendChild(title);

        if (book.status) {
          const status = document.createElement('span');
          status.textContent = book.status.toUpperCase();
          status.style.cssText = 'display:inline-block;padding:8px 20px;background:rgba(217,164,65,0.3);color:#D9A441;border-radius:30px;font-size:14px;font-weight:800;';
          bookDiv.appendChild(status);
        }

        bookDiv.addEventListener('click', () => {
          alert(`KsiÄ™ga: ${book.title}\nStatus: ${book.status || 'w przygotowaniu'}\nDostÄ™pna na Wattpad / Amazon KDP`);
        });

        gateDiv.appendChild(bookDiv);
      });
    } else {
      const empty = document.createElement('p');
      empty.textContent = 'Brak opublikowanych ksiÄ…g w tej bramie â€“ manifestacja w toku';
      empty.style.cssText = 'opacity:0.7;text-align:center;font-style:italic;font-size:18px;';
      gateDiv.appendChild(empty);
    }

    elements.contentArea.appendChild(gateDiv);
  });

  logMessage(`Otworzono Å›wiat: ${world.name} â€“ ${world.gates.length} bram w peÅ‚ni aktywnych`);
}

function logMessage(message) {
  if (!elements.log) return;
  const timestamp = new Date().toLocaleTimeString();
  elements.log.textContent += `[${timestamp}] ${message}\n`;
  elements.log.scrollTop = elements.log.scrollHeight;
}

function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}

